<!DOCTYPE html>
<html>
<head>
  <title>Eventer</title>
  <link href='https://fonts.googleapis.com/css?family=Poiret+One|Oswald:400,300' rel='stylesheet' type='text/css'>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
</head>
<body>

<nav class="top-bar navigate" data-topbar role="navigation">
  <ul class="title-area">
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
     <!-- <li class="title"><a href="#"><span>Home</span></a></li> -->

  <li class="name">
      <a href="/events"><img src= <%=image_path("eventr_logo.png")%> /></a>
  </li>
  </ul>


  <section class="top-bar-section">

    <ul class="center-buttons">
      
      <li class="has-form">
        <li class="has-form">
          
          <form action="/search" method="GET" class="row">
            <div class="large-8 small-9 columns">
              <input type="date" name="date" id="search_bar" class="radius">
            </div>
            <div id="search_bar" class="large-4 small-3 columns">
              <button class="success button radius">Search</button>
            </div>
          </form>

        </li>
        </div>
      </li>
      
    </ul>

    <!-- Right Nav Section -->
    <ul class="right">
      
      <% if session[:user_id]%>
      <li> <%= link_to "Logout", sessions_path, method: :delete %> </li>
      <li> <a href="/users/<%= session[:user_id]%>">Saved Events</a> </li>
      <% end %>
    </ul>

    <!-- Left Nav Section -->
    <!-- <ul class="left">
      <li><a href="#">Left Nav Button</a></li>
    </ul> -->

  </section>
</nav>

<%= yield %>

</body>
</html>
